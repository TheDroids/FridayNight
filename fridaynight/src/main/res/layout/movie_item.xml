<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="124dp"
        android:layout_height="183dp"
        android:id="@+id/ivPosterImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivPosterImage"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSynopsis"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@id/ivPosterImage"
        android:layout_alignLeft="@id/tvTitle"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWant"
        android:layout_below="@+id/tvSynopsis"
        android:layout_toRightOf="@+id/ivPosterImage"
        android:layout_alignLeft="@id/tvTitle"
        android:text="@string/button_want_label"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIgnore"
        android:layout_alignTop="@+id/btnWant"
        android:layout_toRightOf="@id/btnWant"
        android:text="@string/button_ignore_label"/>

</RelativeLayout>